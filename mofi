    :icon => "thunderbird",
  },%{
    :name => "Open address book",
    :icon => "thunderbird",
    :exec => "/usr/lib/thunderbird/thunderbird -addressbook"
  }]

case System.argv do
  [] ->
    entries
    |> Enum.map(&(<<&1.name::binary,0,"icon",31,&1.icon::binary>>))
    |> Enum.join("\n")
    |> IO.puts
  [input] ->
    case entries |> Enum.filter(&(&1.name == input)) do
      [%{:exec => exec}] ->
        System.cmd("sh", ["-c", "coproc " <> exec])
      _ -> nil
    end
end
